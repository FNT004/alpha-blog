<h1> create an article </h1>

<% if @article.errors.any? %>
        <% @article.errors.full_messages.each do |msg| %>
        <ul> <li> <%= msg %> </li> </ul>
        <% end %>
    <%end%>
 
<%= turbo_frame_tag "post" do %>
    <%= form_with(model: @article) do |f| %>


    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %> <br/>
        <%= f.text_area :description, size: "160x20" %>
    </p>

    <p> 
        <%= f.submit "Submit" %>
    
    </p>

<%end%>
<% end %>

